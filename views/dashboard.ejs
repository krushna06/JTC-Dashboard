<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Welcome, <%= user.username %></h1>
        <h2>Your Mutual Guilds</h2>
        <ul class="guild-list">
            <% guilds.forEach(guild => { %>
                <li class="guild-item">
                    <img 
                        src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon ? guild.icon : '' %>.png" 
                        alt="<%= guild.name %>" 
                        class="guild-icon"
                        onerror="this.src='/images/default_icon.png';"
                    >
                    <div class="guild-info">
                        <strong class="guild-name"><%= guild.name %></strong>
                        <a href="/guild/<%= guild.id %>/manage" class="btn">Manage</a>
                    </div>
                </li>
            <% }) %>
        </ul>
        <a href="/logout" class="btn logout-btn">Logout</a>
    </div>
</body>
</html>
